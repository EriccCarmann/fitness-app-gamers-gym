<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Workouts.FullBodyWorkoutActivity">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:background="@drawable/fullbody_background"
            android:textSize="24dp"
            android:textAlignment="center"
            android:paddingTop="13dp"
            android:text="Тренировка на всё тело"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="Недельный план"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_light_italic"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="13sp"
            android:text="(выберите день)"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="150px"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/day1"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_active"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="1"
                />
            <TextView
                android:id="@+id/day2"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_inactive"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="2"
                />
            <TextView
                android:id="@+id/day3"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_inactive"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="3"
                />
            <TextView
                android:id="@+id/day4"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_inactive"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="4"
                />
            <TextView
                android:id="@+id/day5"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_inactive"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="5"
                />
            <TextView
                android:id="@+id/day6"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_inactive"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="6"
                />
            <TextView
                android:id="@+id/day7"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/circle_background_inactive"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="15dp"
                android:text="7"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_light_italic"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="Данная тренировка позволит вам\nукрепить ваше тело и привести его в\nнужную форму"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/inter_light_italic"
        android:textSize="18dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/inter_light_italic"
        android:textSize="18dp"
        android:textColor="@color/black"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/round_corners_blue"
        android:id="@+id/reset_progress"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter"
        android:text="Сбросить прогресс"
        android:textSize="13dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/round_corners_blue"
        android:id="@+id/start_workout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter"
        android:text="Начать тренировку"
        android:textSize="20dp"
        />
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="right">
        <ImageButton
            android:id="@+id/back_to_tabs"
            android:src="@drawable/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            />
    </FrameLayout>
</LinearLayout>